server {
    listen 80;
    listen [::]:80;
    server_name khan.local www.khan.local;
    location / {
        proxy_pass http://10.11.0.1:7007;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

server {
    listen 80;
    listen [::]:80;
    server_name wiki.local www.wiki.local;
    location / {
        proxy_pass http://10.11.0.1:81;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

server {
      listen        80;
      server_name   www.files.local files.local;

      location /{
        autoindex on;
        root /var/run/usbmount/LPOFFEXT/files;
      }
    }

server {
      listen        80;
      server_name   fdroid.local;

      location /{
        autoindex on;
        root /var/run/usbmount/LPOFFEXT/fdroid;
      }
    }


